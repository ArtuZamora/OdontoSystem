@model IEnumerable<BusinessLogic.Models.Inventory>

@{
    ViewData["Title"] = "Index";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <div class="row d-flex justify-content-between">
            <div class="col">
                <h2>Administración de inventario </h2>
            </div>
            <div class="col d-flex justify-content-end align-items-end">
                    <button class="btn btn-sm btn-primary" id="createOpt">
                        <strong>Crear Nuevo</strong>
                    </button>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Lista de inventario </h5>
                    <div class="ibox-tools">
                        @*<a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                        </a>*@
                    </div>
                </div>
                <div class="ibox-content table-responsive">

                    <table id="table" class="table table-striped table-bordered table-hover dataTables-example dataTable">
                        <thead>
                            <tr class="text-center">
                                <th>Id</th>
                                <th>Marca</th>
                                <th>Nombre</th>
                                <th>Existencias</th>
                                <th>Fecha de registro</th>
                                <th>Fecha de riesgo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Brand)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Stock)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreateDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RiskDate)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>