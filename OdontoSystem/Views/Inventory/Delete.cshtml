@model BusinessLogic.Models.Inventory

@{
    ViewData["Title"] = "Borrar";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <div class="row d-flex justify-content-between">
            <div class="col">
                <h2>Administración de inventario | Eliminar</h2>
            </div>
            <div class="col d-flex justify-content-end align-items-end">
                <a asp-action="index" class="btn btn-sm btn-primary">
                    <strong>Regresar</strong>
                </a>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
    </div>
</div>
    <h3>¿Seguro que quiere eliminar el producto @Html.DisplayFor(model => model.Brand)?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RiskDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RiskDate)
        </dd>
    </dl>
    
    <form method="post" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">
            Cancelar
        </a>
    </form>
</div>
