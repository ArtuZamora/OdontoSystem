@model BusinessLogic.Models.Inventory

@{
    ViewData["Title"] = "Detalle";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <div class="row d-flex justify-content-between">
            <div class="col">
                <h2>Administración de inventario </h2>
            </div>
            <div class="col d-flex justify-content-end align-items-end">
                <a asp-action="Index" class="btn btn-sm btn-primary">
                    <strong>Regresar</strong>
                </a>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="mt-3">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RiskDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RiskDate)
        </dd>
    </dl>
</div>
<div class="d-flex" style="gap:15px">
     <a asp-route-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">
        <i class='fas fa-trash'></i>
         Eliminar
    </a>
    <a asp-route-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
        <i class='fas fa-pencil-alt'></i>
         Editar
    </a>
</div>
