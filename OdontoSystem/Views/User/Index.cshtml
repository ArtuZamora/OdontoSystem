@using OdontoSystem.Areas.Identity.Data
@model IEnumerable<OdontoSystemUser>

@{
    ViewData["Title"] = "Lista";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <div class="row d-flex justify-content-between">
            <div class="col">
                <h2>Administración de usuarios </h2>
            </div>
            <div class="col d-flex justify-content-end align-items-end">
                <a asp-action="Create" class="btn btn-sm btn-primary" id="createOpt">
                    <strong>Crear Nuevo</strong>
                </a>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Lista de usuarios </h5>
                    <div class="ibox-tools">
                        @*<a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                        </a>*@
                    </div>
                </div>
                <div class="ibox-content table-responsive">

                    <table id="table" class="table table-striped table-bordered table-hover dataTables-example dataTable">
                        <thead>
                            <tr class="text-center">
                                <th>Correo</th>
                                <th>DUI</th>
                                <th>Dirección</th>
                                <th>Nombre completo</th>
                                <th>Contacto</th>
                                <th>Tipo de usuario</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @item.DUI
                                    </td>
                                    <td>
                                        @item.Address
                                    </td>
                                    <td>
                                        @item.Name @item.LastName
                                    </td>
                                    <td>
                                        @item.Telephone
                                    </td>
                                    <td>
                                        @item.Speciality
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success mx-2 editOpt" data-toggle="tooltip" data-placement="top" title="Editar" data-id="@item.Id">
                                            <i class="fa fa-pen-to-square"></i>
                                        </a>
                                        <button class="btn btn-sm btn-danger deleteOpt" data-toggle="tooltip" data-placement="top" title="Eliminar" data-id="@item.Id">
                                            <i class="fa fa-xmark"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/User/script.js" asp-append-version="true"></script>
}