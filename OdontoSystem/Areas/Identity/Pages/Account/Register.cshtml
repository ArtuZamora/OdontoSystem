@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_LayoutLogin";
}

<div class="ibox">
    <div class="ibox-content">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 style="font-size: 4em;">OdontoSystem</h2>
            <p>Crear una cuenta</p>
             <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row m-3">
                <label asp-for="Input.Email" class="d-flex justify-content-start"></label>
                <input asp-for="Input.Email" class="form-control col-10" required />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group row m-3">
                <label asp-for="Input.Password" class="d-flex justify-content-start"></label>
                <input asp-for="Input.Password" class="form-control col-10" required />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group row m-3">
                <label asp-for="Input.ConfirmPassword" class="d-flex justify-content-start"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control col-10" required />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button class="btn btn-primary" type="submit">Registrarse</button>
        </form>
    </div>
    <div class="ibox-title" style="padding: 0.5em; padding-top: 1em;">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
