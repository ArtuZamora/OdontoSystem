@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Recuperar cuenta";
    Layout = "_LayoutLogin";
}

<div class="ibox">
    <div class="ibox-content">
        <h2 style="font-size: 4em;">OdontoSystem</h2>
        <form class="m-t" role="form" method="post" id="account">
            <p>Recupera tu cuenta</p>

            <div class="form-group" style="margin: 2em !important;">
                <label asp-for="Input.Email" class="d-flex justify-content-start"></label>
                <input asp-for="Input.Email" class="form-control" required />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group row  m-l m-r">
                <div class="d-flex w-100 justify-content-between">
                    <a class="btn btn-default" id="login" asp-page="./Login">Iniciar sesión</a>
                    <button class="btn btn-primary" type="submit" id="SubmitBtn">Recuperar cuenta</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
