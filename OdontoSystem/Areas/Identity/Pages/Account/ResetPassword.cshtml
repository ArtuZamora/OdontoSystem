@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
    Layout = "_LayoutLogin";
}


<div class="ibox">
    <div class="ibox-content">
        <form method="post">
            <h2 style="font-size: 4em;">OdontoSystem</h2>
            <p>Recuperar cuenta</p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Input.Code" type="hidden" />
            <div class="form-group row m-3">
                <label asp-for="Input.Email" class="d-flex justify-content-start"></label>
                <input asp-for="Input.Email" class="form-control col-10" required />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group row m-3">
                <label asp-for="Input.Password" class="d-flex justify-content-start"></label>
                <input asp-for="Input.Password" class="form-control col-10" required />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group row m-3">
                <label asp-for="Input.ConfirmPassword" class="d-flex justify-content-start"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control col-10" required />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group row  m-l m-r">
                <div class="d-flex w-100 justify-content-between">
                    <a class="btn btn-default" id="login" asp-page="./Login">Iniciar sesión</a>
                    <button class="btn btn-primary" type="submit">Cambiar contraseña</button>
                </div>
            </div>
        </form>
    </div>
    <div class="ibox-title" style="padding: 0.5em; padding-top: 1em;">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
